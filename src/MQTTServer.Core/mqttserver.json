{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "File": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      },
      "Shared": true,
      "Template": "{Timestamp:o} {RequestId,13} [{Level:u3}] {Message} ({EventId:x8}){NewLine}{Exception}",
      "FlushInterval": 2,
      "PathFormat": "Logs/mqttserver.log",
      "FileCountLimit": 31,
      "IncludeScopes": true
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "IMqttLogger": "Warning",
        "Microsoft.AspNetCore":  "Warning"
      }
    }
  },
  "Server": {
    "Host": "localhost",
    "Port": 5002,
    "CommunicationTimeout": 15,
    "ConnectionBacklog": 10,
    "MaxPendingMessagesPerClient": 250,
    "Persistent": false,
    "Encrypted": false,
    "CertificationLocation": "",
    "MessageStorageLocation": "./storage.json",
    "ShowSubscriptions": true,
    "ShowMessages": true,
    "ShowClientConnections": true
  },
  "WebServer": {
    "Buffer": 100
  }
}
